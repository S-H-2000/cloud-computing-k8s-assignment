apiVersion: apps/v1
kind: Deployment
metadata:
  name: pet-store1
env:
  - name: STORE_ID
    value: "1"
  - name: MONGO_URI
    value: "mongodb://database:27017" # 'database' will be the name of your DB Service
  - name: NINJA_API_KEY
    valueFrom:
    secretKeyRef:
      name: ninja-api-secret
      key: NINJA_API_KEY
spec:
  replicas: 1
  selector:
    matchLabels:
      app: pet-store1
  template:
    metadata:
      labels:
        app: pet-store1
    spec:
      containers:
        - name: pet-store1
          image: pet-store1:latest
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 5000
          resources:
            requests:
              cpu: 200m
              memory: 128Mi
            limits:
              cpu: 500m
              memory: 512Mi
